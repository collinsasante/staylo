rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Hostels collection
    // - Anyone can read hostels (for public browsing)
    // - Only authenticated users can create/update/delete
    match /hostels/{hostelId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Inquiries collection
    // - Anyone can create an inquiry (public form submission)
    // - Only authenticated users can read/update/delete inquiries
    match /inquiries/{inquiryId} {
      allow create: if true; // Public can submit inquiries
      allow read, update, delete: if request.auth != null; // Admin only
    }

    // Users collection (for future user management)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Catch-all: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
